{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend project generated by Apollo Gears CLI",
  "main": "dist/server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon --exec tsx src/server.ts",
    "build": "prisma generate && tsup src/index.ts --format esm --platform node --target node20 --outDir api --external pg-native --external @prisma/client",
    "postinstall": "prisma generate",
    "start": "node api/index.mjs",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "setup": "pnpm install && pnpm add @prisma/adapter-pg pg && pnpm add -D @types/pg && pnpm prisma:generate",
    "predev": "prisma generate",
    "init": "prisma generate && prisma migrate dev --name init",
    "seed:templates": "tsx scripts/seed-templates.ts",
    "import:client-history": "tsx scripts/import-client-history.ts data/data.csv",
    "test:import": "tsx scripts/test-import.ts",
    "quick-start": "tsx scripts/quick-start.ts"
  },
  "keywords": [
    "express",
    "prisma",
    "typescript",
    "apollo-gears"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/adapter-pg": "^7.4.1",
    "@prisma/client": "^7.4.1",
    "@prisma/client-runtime-utils": "^7.4.1",
    "bcryptjs": "^2.4.3",
    "better-auth": "^1.4.19",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "http-status": "^2.1.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.1",
    "pg": "^8.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^25.3.0",
    "@types/pg": "^8.16.0",
    "eslint": "^10.0.2",
    "prettier": "^3.8.1",
    "prisma": "^7.4.1",
    "ts-node-dev": "^2.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
